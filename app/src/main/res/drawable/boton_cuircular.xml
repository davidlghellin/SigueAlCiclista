<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <corners android:radius="100dp"/>
    <gradient
        android:centerColor="#F70F17"
        android:centerX="25%"
        android:centerY="15%"
        android:endColor="#FF562B"
        android:gradientRadius="100"
        android:startColor="#E8E8E8"
        android:type="radial"
        />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"/>
    <size
        android:width="150dp"
        android:height="100dp"/>
    <stroke
        android:width="2dp"
        android:color="#878787"/>
</shape>